@model Proyecto.Application.DTOs.PaisDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Pais</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="crear">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPais" class="control-label"></label>
                <input asp-for="IdPais" class="form-control" />
                <span asp-validation-for="IdPais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnCrear" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        <script type="text/javascript" >

            document.getElementById("crear").addEventListener("submit", function (event) {
                // Detener la propagación del evento
                event.preventDefault();
                event.stopPropagation();

                // Verificar si el formulario es válido
                if (event.target.checkValidity()) {
                    // Mostrar el mensaje de confirmación
                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: '¿Deseas guardar este cliente en el sistema?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sí, guardar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        // Si el usuario confirma, enviar el formulario
                        if (result.isConfirmed) {
                            onBegin();
                            setTimeout(function () {
                                document.getElementById('crear').submit();
                            }, 1000); // Esperar 3 segundos antes de enviar el formulario
                        }
                    });
                } else {
                    console.log("Faltan datos por agregar");
                    // Si el formulario no es válido, no hacer nada
                }
            });

        // Función para manejar la respuesta JSON del controlador
        function handleResponse(response) {
            if (response.success === false) {
                // El ID del país ya existe
                var idPais = response.idPais;
                swal("Error", "El ID del país " + idPais + " ya existe.", "error");
            } else {
                // Si el ID del país no existe, enviar el formulario
                $('#formCrear').off('submit').submit();
            }
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
